<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="CLUB">
		<jta-data-source>jdbc/club_db_resource</jta-data-source>
		<class>club.DAO.Comment</class>
		<class>club.DAO.User</class>
		<class>club.DAO.Platform</class>
		<class>club.DAO.Theme</class>
		<class>club.DAO.Post</class>
		<class>club.DAO.Event</class>
		<class>club.DAO.News</class>
		
		<!-- https://en.wikibooks.org/wiki/Java_Persistence/Caching#Example_JPA_2.0_Cacheable_annotation -->
		<shared-cache-mode>NONE</shared-cache-mode>
		
		<properties>
			<!-- create db tables / insert data (or what ever) on deploy  -->
			<!-- see http://docs.oracle.com/javaee/7/tutorial/persistence-intro005.htm -->
			
			<property name="javax.persistence.sql-load-script-source" value="META-INF/sql/data.sql" />
			
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>		
			<!-- decide what to create / drop from metadata, ie Annotations -->
			<property name="javax.persistence.schema-generation.create-source" value="metadata"/>
            <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
				
			<property name="javax.persistence.sql-load-script-source" value="META-INF/sql/data.sql" />
			
			<!-- make sure all the tables and columns are named accordning to the same rules -->
			<property name="hibernate.ejb.naming_strategy" value="org.hibernate.cfg.ImprovedNamingStrategy"/> 
			
		</properties>
		
	</persistence-unit>
	

</persistence>
